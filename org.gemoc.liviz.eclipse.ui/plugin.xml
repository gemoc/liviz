<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.gemoc.liviz.eclipse.ui"
            name="Liviz">
      </category>
      <view
            category="org.gemoc.liviz.eclipse.ui"
            class="org.gemoc.liviz.eclipse.ui.views.LivizConfigurationView"
            icon="icons/sample.png"
            id="org.gemoc.liviz.eclipse.ui.views.LivizConfigurationView"
            inject="true"
            name="LivizConfigurationView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="org.gemoc.liviz.eclipse.ui.views.LivizConfigurationView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
